{
  "family": "barterly-auth-service",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "barterly-auth-service",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/barterly-auth-service:latest",
      "portMappings": [{ "containerPort": 3001, "protocol": "tcp" }],
      "environment": [
        { "name": "AWS_REGION", "value": "us-east-1" },
        { "name": "COGNITO_USER_POOL_ID", "value": "us-east-1_XXXXX" },
        { "name": "COGNITO_APP_CLIENT_ID", "value": "YYYYYYYYYY" },
        { "name": "EVENT_BUS_NAME", "value": "barterly-bus" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/barterly-auth-service",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512"
}
